<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id">
            {% for category in categories %}
            
            <option value="{{category.id}}" 
                    {% if product.category_id == category.id %} 
                    selected 
                    {% endif %}>{{category.name}}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Nome do Produto</div>
    <div>
        <input 
        name="name" 
        type="text" 
        value="{{product.name}}" 
        placeholder="Produto">
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea 
        name="description" 
        value="{{product.description}}" 
        placeholder="Descrição do Produto"
        cols="30" rows="10">{{product.description}}</textarea>
    </div>
</div>

<div class="item">
    <div>Fotos</div>
    <div>
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photos" 
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <p>Selecione até 6 fotos</p>
        </div>
        <div id="photos-preview">
            {% if files %}
                {% for image in files %}
                <div class="photo" id="{{image.id}}">
                   <img src="{{image.src}}" alt="{{image.name}}">
                   <i class="material-icons"
                        onclick="PhotosUpload.removeOldPhoto(event)">
                       close
                   </i>

                </div>

                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>

<div class="item">
    <div>Preço</div>
    <div>
        <input 
        type="text" 
        name="price" 
        value="{{product.price}}"
        placeholder="0,00"
        onkeydown="Mask.apply(this,'formatBRL')">
    </div>
    <!--
    {% if product.old_price %}
    <input 
    type="text" 
    name="old_price" 
    value="{{product.old_price}}">
    {% endif %}
    -->
</div>

<div class="item">
    <div>Quantidade</div>
    <input 
    type="number" 
    name="quantity" 
    value="{{product.quantity}}"
    placeholder="Quantidade do Produto">
</div>

{% if (product.status == '1') or (product.status == '0') %}


<div class="item">
    <div>Disponivel ?</div>
    <div>
        <span>
            <input 
            type="radio"
            name="status"
            value="1"
            {% if product.status == 1 %}
            checked
            {% endif %}
            > sim
        </span>
        <span>
            <input 
            type="radio"
            name="status"
            value="0"
            {% if product.status == 0 %}
            checked
            {% endif %}
            > não
        </span>
    </div>
</div>

{% endif %}